@model IEnumerable<Web2.Models.MixViewModel>

@{
    ViewBag.Title = "EmployeeSchedules";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Schedule</h2>
<td>
    <button onclick="location.href='@Url.Action("UserTable", "Admin")';return false;" class="btn btn-default">Users</button>
    <button onclick="location.href='@Url.Action("ScheduleList", "Admin")';return false;" class="btn btn-default">Schedule</button>
    <button onclick="location.href='@Url.Action("TaskList", "Admin")';return false;" class="btn btn-default">Tasks</button>

    <br><br>
</td>

<p>
    @Html.ActionLink("Create New", "CreateSchedule")
</p>
<table class="table">
    <tr>
        <th>

            @Html.DisplayName("Employee")
        </th>
        <th>
            @Html.DisplayName("Date")
        </th>
        <th>
            @Html.DisplayName("Time")
        </th>

        <th>
            @Html.DisplayName("Customer")
        </th>
        <th>
            @Html.DisplayName("Task")
        </th>
        <th>
            @Html.DisplayName("Duration")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.employee.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.schedule.date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.schedule.time)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.customer.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.task.title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.task.duration)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditSchedule", new { id = item.schedule.Id }) |
                @Html.ActionLink("Details", "DetailsSchedule", new { id = item.schedule.Id }) |
                @Html.ActionLink("Delete", "DeleteSchedule", new { id = item.schedule.Id })
            </td>
        </tr>
    }

</table>
