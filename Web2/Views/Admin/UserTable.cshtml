@model IEnumerable<Web2.Models.ApplicationUser>

@{
    ViewBag.Title = "UserTable";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>UserTable</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            Role
        </th>
        <th></th>
    </tr>
    @using Microsoft.AspNet.Identity
    @using Microsoft.AspNet.Identity.Owin;

    @foreach (var item in Model)
    {
        var userManager = Request.GetOwinContext().GetUserManager<ApplicationUserManager>();
        var userRoles = userManager.GetRoles(item.Id);
        var role = userRoles[0];
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @role
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }) |
                    @if (role == "Employee")
                    {
                        @Html.ActionLink("tasks", "tasksmapping", new { id = item.Id })
                    }
                    @if (role == "Customer")
                    {
                        @Html.ActionLink("relatives", "relativesmapping", new { id = item.Id })
                    }
                </td>
            </tr>
        }

</table>
